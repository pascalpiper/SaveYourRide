<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.saveyourride">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service android:name=".services.TimerService" />

        <activity
            android:name=".activities.MainScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Activity_Active"
            android:label="@string/title_activity__active"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.MainScreen"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.saveyourride.activities.MainScreen" />
        </activity>
        <activity
            android:name=".activities.PassiveMode"
            android:label="@string/title_activity_passive_mode"
            android:parentActivityName=".activities.MainScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.saveyourride.activities.MainScreen" />
        </activity>
        <activity
            android:name=".activities.ActiveMode"
            android:label="@string/title_activity_active_mode"
            android:parentActivityName=".activities.MainScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.saveyourride.activities.MainScreen" />
        </activity>

        <!-- Service for location requests -->
        <service android:name=".services.LocationService" />
    </application>

</manifest>