<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.AppCompat.Dialog"
    tools:context=".activities.ActiveMode">

    <View
        android:id="@+id/activeMode_dialog_backgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/activeMode_dialog_linearLayout"
        android:layout_alignEnd="@id/activeMode_dialog_linearLayout"
        android:layout_alignStart="@id/activeMode_dialog_linearLayout"
        android:layout_alignTop="@+id/activeMode_dialog_linearLayout"
        android:background="@color/colorPrimary"
        android:elevation="1dp"
        android:padding="30dp" />

    <View
        android:id="@+id/activeMode_dialog_gradientView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/activeMode_dialog_linearLayout"
        android:layout_alignEnd="@id/activeMode_dialog_linearLayout"
        android:layout_alignStart="@id/activeMode_dialog_linearLayout"
        android:layout_alignTop="@+id/activeMode_dialog_linearLayout"
        android:background="@drawable/white_gradient"
        android:elevation="1dp" />

    <LinearLayout
        android:id="@+id/activeMode_dialog_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:orientation="vertical"
        android:theme="@style/Theme.AppCompat.Dialog"
        tools:context=".activities.ActiveMode">

        <TextView
            android:id="@+id/activeMode_ite_dialog_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:text="@string/interval_time_expired"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorWhite"
            android:textSize="35sp"
            android:textStyle="bold|italic" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:padding="20dp">

            <Button
                android:id="@+id/activeMode_dialog_buttonReset"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_button"
                android:clickable="true"
                android:focusable="true"
                android:elevation="15dp"
                android:text="@string/reset"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorWhite"
                android:textSize="35sp"
                android:textStyle="bold|italic" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:padding="20dp">

            <Button
                android:id="@+id/dialogSosButton"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_button"
                android:clickable="true"
                android:elevation="15dp"
                android:focusable="true"
                android:text="@string/sos"
                android:textColor="@color/colorWhite"
                android:textSize="25sp"
                android:textStyle="bold|italic" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>



