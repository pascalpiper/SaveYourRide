<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_active"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="TIMER"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/buttonStartTimer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/textViewTimer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="START"
        android:textColor="@color/colorWhite"
        android:textStyle="bold|italic" />

    <ImageButton
        android:id="@+id/buttonIntervalSettings"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/textViewTimer"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="38.5dp"
        android:layout_toStartOf="@+id/buttonStartTimer"
        android:background="@drawable/round_button"
        android:clickable="true"
        android:elevation="3dp"
        android:focusable="true"
        app:srcCompat="@drawable/ic_settings_white_35dp" />

    <Button
        android:id="@+id/buttonStopTimer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/round_button"
        android:elevation="16dp"
        android:text="STOP"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorWhite"
        android:textStyle="bold|italic" />


</RelativeLayout>
