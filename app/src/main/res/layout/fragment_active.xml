<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_active"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/activeFragmentGradientView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_gradient"
        android:elevation="1dp" />

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/colored_background"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@raw/forest" />

    <RelativeLayout
        android:id="@+id/activeFragment_layoutNumberOfIntervals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:elevation="3dp">

        <TextView
            android:id="@+id/activeFragment_textViewNumberOfIntervals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:textSize="60sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/activeFragment_nOIDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/activeFragment_textViewNumberOfIntervals"
            android:layout_centerHorizontal="true"
            android:text="@string/text_view_divider"
            android:textColor="@android:color/black"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/activeFragment_nOIDivider"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="@string/number_of_intervals"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activeFragment_layoutTimeOfInterval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/activeFragment_layoutNumberOfIntervals"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:elevation="3dp">

        <TextView
            android:id="@+id/activeFragment_textViewTimeOfInterval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:textSize="60sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/activeFragment_tOIDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/activeFragment_textViewTimeOfInterval"
            android:layout_centerHorizontal="true"
            android:text="@string/text_view_divider"
            android:textColor="@android:color/black"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/activeFragment_tOIDivider"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="@string/time_of_interval"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/activeFragment_buttonStart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="295dp"
            android:background="@drawable/round_button"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:text="@string/start"
            android:textColor="@color/colorWhite"
            android:textSize="28sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

</RelativeLayout>
